<?xml version="1.0"?>
<launch>
  <arg name="limited" default="false"  doc="If true, limits joint range [-PI, PI] on all joints." />
  <arg name="paused" default="false" doc="Starts gazebo in paused mode" />
  <arg name="gui" default="true" doc="Starts gazebo gui" />
  
  <!-- startup simulated world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" default="$(find rain_gazebo)/worlds/test_picking2.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>
  </include>

  <!-- send robot urdf info to param server -->
  <include file="$(find rain_description)/launch/rain_upload.launch">
    <arg name="limited" value="$(arg limited)"/>
  </include>

  <!-- push robot_description to factory and spawn robot in gazebo -->
  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" 
        args="-urdf -param robot_description -model robot -z 0.0 
        -J shoulder_pan_joint -0.126
        -J shoulder_lift_joint -1.33
        -J elbow_joint 2.39
        -J wrist_1_joint -1.11
        -J wrist_2_joint 1.54
        -J wrist_3_joint 0.13" respawn="false" output="screen"/>

  <!-- start joint_state_controller -->
  <include file="$(find rain_gazebo)/launch/controller_utils.launch"/>

  <!-- load controller settings (for UR5) -->
  <rosparam file="$(find rain_gazebo)/controller/arm_controller_ur5.yaml" command="load"/>

  <!-- spawn controller manager -->  
  <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn pos_based_pos_traj_controller" respawn="false" output="screen"/>

  <!-- load other controllers -->
  <node name="arm_controller_manager" pkg="controller_manager" type="controller_manager" respawn="false" output="screen" args="load joint_group_position_controller joint_group_vel_controller" />

  <!-- load controller settings (for 3-finger Gripper) -->
  <!-- <rosparam file="$(find rain_gazebo)/controller/robotiq_3f_controller.yaml" command="load"/> -->

  <!-- spawn controller manager -->  
  <!-- <node name="gripper_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn robotiq_3f_controller" respawn="false" output="screen"/> -->

</launch>
